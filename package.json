{
  "name": "xyz-ui",
  "version": "0.0.1",
  "description": "UI framework powered by Stencil (Web Components)",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "es5": "stencil build --dev --watch --serve --es5",
    "docs": "stencil build --dev --watch --serve --docs",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bartaxyz/xyz-ui.git"
  },
  "keywords": [
    "ui",
    "stencil",
    "web",
    "components"
  ],
  "author": "Ondřej Bárta <email@ondrejbarta.xyz>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bartaxyz/xyz-ui/issues"
  },
  "homepage": "https://github.com/bartaxyz/xyz-ui#readme",
  "dependencies": {},
  "devDependencies": {
    "@stencil/core": "^0.11.0",
    "@stencil/sass": "^0.1.1",
    "@types/jest": "^23.3.1",
    "jest": "^23.4.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
